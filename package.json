{
  "name": "@willjackson/claude-code-bridge",
  "version": "0.7.2",
  "description": "Bidirectional communication system for Claude Code instances across environments",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-bridge": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "start": "node dist/cli.js",
    "prepublishOnly": "npm run build && npm test"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "bridge",
    "websocket",
    "cross-environment",
    "collaboration",
    "remote",
    "file-operations"
  ],
  "author": "Will Jackson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/willjackson/claude-code-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/willjackson/claude-code-bridge/issues"
  },
  "homepage": "https://github.com/willjackson/claude-code-bridge#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^12.1.0",
    "minimatch": "^10.1.1",
    "pino": "^9.6.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/node": "^22.13.4",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.14",
    "pino-pretty": "^13.1.3",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
